{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start Contexts",
      "dependsOn": [
        "Courses",
        "Students"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
      }
    },
    {
      "label": "stop Contexts",
      "type": "shell",
      "command": "echo ${input:stopContexts}",
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "close": true,
      },
    },
    {
      "label": "Courses",
      "detail": "nest start courses --watch",
      "type": "shell",
      "command": "npm run start-courses:dev",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "webpack",
          "endsPattern": "successfully"
        }
      }
    },
    {
      "label": "Students",
      "detail": "nest start students --watch",
      "type": "shell",
      "command": "npm run start-students:dev",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "webpack",
          "endsPattern": "successfully"
        }
      }
    }
  ],
  "inputs": [
    {
      "id": "stopContexts",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "terminateAll",
    },
  ]
}