{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/backend/src",
  "monorepo": true,
  "root": "apps/backend",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/backend/tsconfig.app.json"
  },
  "projects": {
    "campus": {
      "type": "application",
      "root": "apps/backend",
      "entryFile": "main",
      "sourceRoot": "apps/backend/src",
      "compilerOptions": {
        "tsConfigPath": "apps/backend/tsconfig.app.json"
      }
    },
    "students": {
      "type": "application",
      "root": "apps/students",
      "entryFile": "main",
      "sourceRoot": "apps/students/src",
      "compilerOptions": {
        "tsConfigPath": "apps/students/tsconfig.app.json"
      }
    },
    "teachers": {
      "type": "application",
      "root": "apps/teachers",
      "entryFile": "main",
      "sourceRoot": "apps/teachers/src",
      "compilerOptions": {
        "tsConfigPath": "apps/teachers/tsconfig.app.json"
      }
    },
    "courses": {
      "type": "application",
      "root": "apps/courses",
      "entryFile": "main",
      "sourceRoot": "apps/courses/src",
      "compilerOptions": {
        "tsConfigPath": "apps/courses/tsconfig.app.json"
      }
    }
  }
}